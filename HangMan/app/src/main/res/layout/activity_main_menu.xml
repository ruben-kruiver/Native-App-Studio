<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/background"
        android:scaleType = "centerCrop"
        android:layout_gravity="center_horizontal|top" />

    <Button
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:text="@string/menu_single_player"
        android:id="@+id/single_player_button"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:onClick="startSinglePlayerGame"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_multiplayer_player"
        android:id="@+id/multi_player_button"
        android:layout_gravity="center"
        android:layout_below="@+id/single_player_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="startMultiPlayerGame"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_settings"
        android:id="@+id/settings_button"
        android:layout_below="@+id/multi_player_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="ChangeSettings"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_quit"
        android:id="@+id/quit_button"
        android:layout_below="@+id/settings_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="CloseApplication"/>
</RelativeLayout>
