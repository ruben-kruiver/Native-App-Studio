<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.mprog.apps.hangman11079592" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".NewGameActivity"
            android:label="@string/title_activity_new_game"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".NewGameActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.mprog.apps.hangman11079592.NewGameActivity" />
        </activity>
        <activity
            android:name=".HighScoreActivity"
            android:label="@string/title_activity_high_score"
            android:parentActivityName=".NewGameActivity" >
        </activity>
    </application>

</manifest>
